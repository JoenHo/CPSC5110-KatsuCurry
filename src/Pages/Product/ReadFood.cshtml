@page
@model ContosoCrafts.WebSite.Pages.Product.ReadFoodModel
@{
}

<div id="food_read" class="" runat="server">
    <br />
    <h2 align="center"><b>@Model.foods.Name</b></h2>

    <div class="content">
        <img class="card-img" src='@Model.foods.Image' alt='Image for @Model.foods.Name'>
    </div>

    <br />
    <br />

    <div>
        <table cellPadding=10>
            <thead>
            </thead>
            <tbody>
                <tr>
                    <td><b>ID</b></td>
                    <td>@Model.foods.Id</td>
                </tr>
                <tr>
                    <td><b>NAME</b></td>
                    <td>@Model.foods.Name</td>
                </tr>
                <tr>
                    <td><b>Description</b></td>
                    <td>@Model.foods.Description</td>
                </tr>
                <tr>
                    <td><b>IMAGE</b></td>
                    <td>@Model.restaurants.Image</td>
                </tr>
            </tbody>

        </table>
    </div>

    <br />
    <br />

    <div class="row">
        <a asp-page="Update" asp-route-id="@Model.restaurants.Id" class="btn btn-primary">Update</a> &nbsp; &nbsp;
        <a asp-page="Delete" asp-route-id="@Model.restaurants.Id" class="btn btn-danger">Delete</a>
    </div>
</div>